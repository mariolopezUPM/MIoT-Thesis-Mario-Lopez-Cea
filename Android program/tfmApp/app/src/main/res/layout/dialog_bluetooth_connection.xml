<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/dialogConnectionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Do you want to connect to the device?"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/connectionDialogButtomsLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="bottom">

            <Button
                android:id="@+id/dialogConnectionPositiveButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Yes"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="18dp"/>

            <Button
                android:id="@+id/dialogConnectionNegativeButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Cancel"
                android:layout_marginRight="14dp"
                android:layout_marginLeft="18dp"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/connectionDialogProgressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingTop="10dp"
            android:layout_gravity="bottom"
            android:visibility="gone"
            />


    </RelativeLayout>




</LinearLayout>